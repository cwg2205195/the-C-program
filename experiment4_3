#include<stdio.h>
#include<math.h>
#include<stdlib.h>
#define N 1000 //修改存储数组的大小
 
int IsPrimes(int num)//判断num是否为素数 
{
	int i=2,flag=0;
	for (;i<=2/num;i++)
	{
		if (num % i == 0)
			flag=1;
	}
	if ( flag ==  0)
	return num;
	else 
	return 0;
}

main()
{
	int num,x[N],i=0,j,sum,test; 
	printf("输入一个大于6的偶数\n");
	scanf("%d",&num);
			for (j=2;j<num;j++)
			{
				if ( IsPrimes(j) )
				{
					x[i]=j;
					i++;
				}
			}
	for (i=0;i<20;i++)
			printf("%d\n",x[i]);
	for (i=0,j=0;i<N;i++)
		{
			for (j=i+1;j<N;j++)
			{
				sum=x[i]+x[j];
				if ( sum == num )
					printf("%d=%d+%d\n",num,x[i],x[j]);
			}
		}
		test=12;
	IsPrimes(test);
	printf("test=%d\n",test);
}
